<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TP NODE</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.css">
</head>
<body>
    <div class="container" style="margin-top: 50px;">
        <div style="display: flex; align-items: center; justify-content: space-between;">
            <h1>ABM Empleados</h1>
            <p class="d-inline-flex gap-1">
                <a class="btn btn-success mb-2" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Crear nuevo empleado</a>
            </p>
        </div>
        <div class="collapse" id="collapseExample">
            <form action="/crearEmpleado" method="post">
                <div class="row">
                    <div class="mb-3 col">
                        <label for="legajo" class="form-label">Legajo</label>
                        <input type="number" class="form-control form-control-sm" id="legajo" name="legajo" placeholder="1234" required>
                    </div>
                    <div class="mb-3 col">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control form-control-sm" id="apellido" name="apellido" required>
                    </div>
                    <div class="mb-3 col">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control form-control-sm" id="nombre" name="nombre" required>
                    </div>
                    <div class="mb-3 col">
                        <label for="dni" class="form-label">DNI</label>
                        <input type="number" class="form-control form-control-sm" id="dni" name="dni" required>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col">
                        <label for="sector" class="form-label">Sector</label>
                        <input type="text" class="form-control form-control-sm" id="sector" name="sector" required>
                    </div>
                    <div class="mb-3 col">
                        <label for="fechaIngreso" class="form-label">Fecha de Ingreso</label>
                        <input type="text" class="form-control form-control-sm" id="fechaIngreso" name="fechaIngreso" required placeholder="AAAA-MM-DD">
                    </div>
                    <div class="mb-3 col">
                        <label for="activo" class="form-label">Activo</label>
                        <select class="form-select form-select-sm" name="activo" id="activo" required>
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                          </select>
                    </div>
                </div>
                <input type="submit" value="Guardar" class="btn btn-primary">
                <input type="reset" value="Borrar formulario" class="btn btn-secondary">
            </form>
        </div>
        <table class="table table-bordered" style="margin-top: 50px;">
            <thead>
                <tr>
                    <th>Legajo</th>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>DNI</th>
                    <th>Sector</th>
                    <th>Fecha de Ingreso</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- DATOS DE JSON CON EL METODO getEmpleados -->
                <% results.forEach((empleado) => { %>
                    <tr>
                        <td><%= empleado.legajo %></td>
                        <td><%= empleado.apellido %></td>
                        <td><%= empleado.nombre %></td>
                        <td><%= empleado.dni %></td>
                        <td><%= empleado.sector %></td>
                        <td><%= empleado.fechaIngreso %></td>
                        <td><%= empleado.activo %></td>
                        <td>
                            <a href="/modificarEmpleado/<%= empleado.legajo %>" class="btn btn-sm btn-primary">Actualizar</a>
                            <a href="/eliminarEmpleado/<%= empleado.legajo %>" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>